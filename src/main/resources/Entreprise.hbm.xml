<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="com.entities.Entreprise" table="entreprise" schema="fpl2025">
        <id name="id">
            <column name="id" sql-type="int(11)"/>
        </id>
        <property name="nom">
            <column name="nom" sql-type="varchar(25)" length="25"/>
        </property>
        <property name="ville">
            <column name="ville" sql-type="varchar(25)" length="25"/>
        </property>
        <property name="tel">
            <column name="tel" sql-type="varchar(25)" length="25"/>
        </property>
        <set name="employesById" inverse="true">
            <key>
                <column name="entreprise"/>
            </key>
            <one-to-many not-found="ignore" class="com.entities.Employe"/>
        </set>
    </class>
</hibernate-mapping>